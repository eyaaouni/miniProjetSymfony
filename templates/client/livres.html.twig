{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des Livres</h1>

        <form method="get" action="{{ path('client_livres_list') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Rechercher un livre..." value="{{ app.request.get('search') }}">
                <button class="btn btn-primary" type="submit">Rechercher</button>
            </div>
            <div class="mt-4">
                <a href="{{ path('client_panier_show') }}" class="btn btn-outline-primary">Voir mon panier</a>
            </div>
        </form>

        <div class="row">
            {% for livre in livres %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        {% if livre.image %}
                            <img src="{{ livre.image }}" alt="{{ livre.titre }}" style="max-width: 150px;">
                        {% else %}
                            <img src="https://via.placeholder.com/300x300" class="card-img-top" alt="Pas d'image">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ livre.titre }}</h5>
                            <p class="card-text">
                                <small class="text-muted">{{ livre.editeur }}</small><br>
                                {{ livre.resume|slice(0, 100) ~ '...' }}
                            </p>
                            <p><strong>{{ livre.prix }} €</strong></p>
                            <a href="{{ path('client_panier_add', {id: livre.id}) }}" class="btn btn-success">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning">
                        Aucun livre trouvé.
                    </div>
                </div>
            {% endfor %}
        </div>


    </div>
{% endblock %}
